{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Effect": "Allow",
          "Action": [
              "ec2:Describel*"
          ],
          "Resource": "*"
      },
      {
          "Effect": "Deny",
          "Action": [
              "route53:Change*",
              "route53:Create*",
              "route53:Delete*",
              "route53:Update*"
          ],
          "Resource": "*"
      },
      {
          "Effect": "Deny",
          "Action": [
              "ec2:Create*",
              "ec2:Delete*",
              "ec2:Import*",
              "ec2:RunInstances",
              "ec2:StartInstances",
              "ec2:StopInstances",
              "ec2:TerminateInstances"
          ],
          "Resource": "*",
          "Condition": {
              "StringEquals": {
                  "ec2:Region": ${deny_regions}
              }
          }
      },
      {
          "Effect": "Deny",
          "Action": "rds:*",
          "Resource": "*",
          "Condition": {
              "StringEquals": {
                  "rds:Region": ${deny_regions}
              }
          }
      }
  ]
}